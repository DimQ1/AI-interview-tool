<Window x:Class="SystemAudioAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemAudioAnalyzer"
        mc:Ignorable="d"
        Title="AI Interview Tool" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="btnStart" Content="Start Recording" Click="btnStart_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="btnStop" Content="Stop Recording" Click="btnStop_Click" Padding="10,5" IsEnabled="False"/>
            <TextBlock x:Name="txtStatus" Text="Ready" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: Transcription and Translation -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Header="Transcription" Grid.Row="0">
                    <ScrollViewer>
                        <TextBlock x:Name="txtTranscription" TextWrapping="Wrap" />
                    </ScrollViewer>
                </GroupBox>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray" ResizeBehavior="PreviousAndNext"/>

                <GroupBox Header="Translation (RU)" Grid.Row="2">
                    <ScrollViewer>
                        <TextBlock x:Name="txtTranslation" TextWrapping="Wrap" />
                    </ScrollViewer>
                </GroupBox>
            </Grid>

            <!-- Vertical Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray" ResizeBehavior="PreviousAndNext"/>

            <!-- Right Side: Questions and Answers -->
            <GroupBox Header="Analysis (Q&amp;A)" Grid.Column="2">
                <RichTextBox x:Name="rtbAnalysis" IsReadOnly="True" VerticalScrollBarVisibility="Auto">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Waiting for analysis..." Foreground="Gray"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
